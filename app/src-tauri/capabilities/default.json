{
  "$schema": "https://schema.tauri.app/config/2/capability",
  "identifier": "default",
  "description": "Default capabilities for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:allow-open",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "fs:allow-read-file",
    "fs:allow-read-dir",
    "fs:allow-exists",
    "fs:allow-write-file",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [{ "path": "**" }]
    },
    {
      "identifier": "fs:scope",
      "allow": ["**"]
    }
  ]
}
